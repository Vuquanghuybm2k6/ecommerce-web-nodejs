extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/pagination.pug
block main 
  if(role.permissions.includes("roles_view"))
    +alert-success(5000)
    h1 Danh sách sản phẩm
    .card 
      .card-header Danh sách
      .card-body
        .row 
          .col-8
          .col-4 
            if(role.permissions.includes("roles_create"))
              a(href = `${prefixAdmin}/roles/create` class = "btn btn-outline-success") + Thêm mới
        table(class = "table table-hover table-sm" checkbox-multi)
          thead
            tr 
              th STT
              th Nhóm quyền 
              th Mô tả ngắn
              th Hành động
          tbody 
            if(records.length > 0)
              each item, index in records
                tr 
                  td #{(pagination.limitItem)*(pagination.currentPage-1) + (index + 1) } 
                  td #{item.title}
                  td !{item.description}
                  td 
                    if(role.permissions.includes("roles_edit"))
                      a(class = "btn btn-warning btn-sm mb-1 mr-1" href =`${prefixAdmin}/roles/edit/${item.id}`) Sửa
                    if(role.permissions.includes("roles_delete"))
                      button(class = "btn btn-danger btn-sm" button-delete data-id = item.id) Xóa
            else 
              tr 
                td(colspan = "4" class = "text-center") Chưa có nhóm quyền nào được tạo
    +pagination(pagination)
    form(
      action = ``
      method = "POST"
      data-path = `${prefixAdmin}/roles/delete`
      id = "form-delete-role"
    )
    script(src = "/admin/js/role.js")