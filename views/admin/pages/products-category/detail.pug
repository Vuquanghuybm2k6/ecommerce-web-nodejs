extends ../../layouts/default.pug

block main 
  if(role.permissions.includes("products-category_view"))
    if (category.title)
      h1(class="mb-4") #{category.title}
    if (category.thumbnail)
      div(class="mb-4")
        img(src=product.thumbnail style="width: 100px")
    div(class = "mb-4") <b>Danh mục cha: </b> #{category.parent_title}
    if (category.status)
      div(class="mb-4")
        span <b>Trang thái:</b>
        if (category.status === "active")
          span(class="badge badge-success") Hoạt động
        else
          span(class="badge badge-danger") Dừng hoạt động
    if(category.position)
      div(class = "mb-4") <b>Vị trí:</b> #{category.position}
    if(category.description)
      div(class = "mb-4") #{category.description}
    a(
      href=`${prefixAdmin}/products-category/edit/${category.id}` 
      class = "btn btn-warning"
      ) Chỉnh sửa
    script(src = "/admin/js/product.js")