extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
  +alert-success(5000)
  h1 Danh mục sản phẩm
  .card 
    .card-header Danh sách sản phẩm
    .card-body
      .row 
        .col-8
        .col-4 
          a(href = `${prefixAdmin}/products-category/create` class = "btn btn-outline-success") + Thêm mới
      table(class = "table table-hover table-sm" checkbox-multi)
        thead
          tr 
            th 
              input(type = "checkbox" name = "checkall") 
            th STT
            th Hình ảnh 
            th Tiêu đề
            th Vị trí
            th Trạng thái
            th Hành động
        tbody 
          each item, index in records
            tr 
              td 
                input(type = "checkbox" name = "id" value = item.id)
              td #{index+1}
              td 
                img(src = item.thumbnail, alt = item.title width = "100px" height = "auto")
              td #{item.title}
              td 
                input(value = item.position min ="1" name = "position" type ="number" style = "width: 60px")
              td 
                if (item.status =="active")
                  a(
                    href = `javascript: ;` 
                    class = "badge badge-success" 
                    data-status = item.status 
                    data-id = item.id 
                    button-change-status
                    ) Hoạt động
                else 
                  a(
                    href = `javascript: ;` 
                    class = "badge badge-danger" 
                    data-status = item.status 
                    data-id = item.id 
                    button-change-status
                    ) Dừng hoạt động
              td 
                a(class = "btn btn-secondary btn-sm mr-1" href =`${prefixAdmin}/products-category/detail/${item.id}`) Chi tiết
                a(class = "btn btn-warning btn-sm mr-1" href =`${prefixAdmin}/products-category/edit/${item.id}`) Sửa
                button(class = "btn btn-danger btn-sm" button-delete data-id = item.id) Xóa
  form(
    action = ``
    method = "POST"
    data-path = `${prefixAdmin}/products-category/change-status`
    id = `form-change-status`
  )
  form(
    action =``
    method = "POST"
    data-path = `${prefixAdmin}/products-category/delete`
    id = "form-delete-item"
  )
  script(src = "/admin/js/product-category.js")        
  