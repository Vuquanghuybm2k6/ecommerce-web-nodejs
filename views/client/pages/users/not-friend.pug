extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3
    include ../../partials/list-btn-users.pug

    .row 
      .col-12 
        +box-head("Danh sách người dùng")
    
    .row 
      each user in users
        .col-6 
          div(class = "box-user")
            div(class = "inner-avatar")
              img(
                src = (user.avatar?user.avatar:"https://media.dolenglish.vn/PUBLIC/MEDIA/2b2f1391-7dcd-4d41-b1eb-2273c8cd00de.jpg")
                alt = user.fullName
              )
            div(class = "inner-info")
              div(class = "inner-name") #{user.fullName}
              div(class = "inner-buttons")
                button(
                  class = "btn btn-sm btn-primary mr-1"
                  btn-add-friend = user.id
                  ) Kết bạn
                button(
                  class = "btn btn-sm btn-secondary mr-1"
                  btn-cancel-friend = user.id
                  ) Hủy yêu cầu
  block script 
    script(src = "/js/chat.js" type ="module")
    script(src = "/js/users.js" type ="module")