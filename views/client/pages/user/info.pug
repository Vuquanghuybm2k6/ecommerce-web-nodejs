extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-md-8.col-12
        +box-head("Thông tin tài khoản")

        if user
          .text-center.mb-3
            if user.avatar
              img(src=user.avatar width="150" class="mb-3 rounded-circle")
            else
              img(src="/admin/images/avatar.png" width="150" class="mb-3 rounded-circle")

          if user.fullName
            p Họ tên: <b>#{user.fullName}</b>

          if user.email
            p Email: <b>#{user.email}</b>

          if user.phone
            p Số điện thoại: <b>#{user.phone}</b>
        else
          p.text-danger Không tìm thấy thông tin người dùng
        a(
          href=`${prefixAdmin}/user/edit`
          class="btn btn-primary"
        ) Chỉnh sửa thông tin