extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Đổi mật khẩu

        form(
          action="/user/password/reset"
          method="POST"
        )
          .form-group
            label(for="password") Mật khẩu mới
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              style = "width: 686px"
              required
            )

          .form-group
            label(for="confirmPassword") Xác nhận mật khẩu
            input(
              type="password"
              class="form-control"
              id="confirmPassword"
              name="confirmPassword"
              style = "width: 686px"
              required
            )

          button.btn.btn-primary(type="submit" style = "width: 686px") Đổi mật khẩu