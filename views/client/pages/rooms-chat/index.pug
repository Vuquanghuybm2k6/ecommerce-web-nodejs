      .col-6
        div(class = "box-room")
          div(class = "inner-avatar")
            img(
              src = ("https://media.dolenglish.vn/PUBLIC/MEDIA/2b2f1391-7dcd-4d41-b1eb-2273c8cd00de.jpg")
